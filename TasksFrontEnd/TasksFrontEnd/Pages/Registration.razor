@page "/registration";
<h3>Registration</h3>
@if (ShowRegistrationErrors)
{
<div class="alert alert-danger" role="alert">
    <p>@Error</p>
</div>
}
<EditForm Model="__userForRegistration" OnValidSubmit="Register" class="card card-body bg-light mt-5">
    <DataAnnotationsValidator />
    <div class="form-group row">
        <label for="Title" class="col-md-2 col-form-label">UserName:</label>
        <div class="col-md-10">
            <InputText id="UserName" class="form-control" @bind-Value="__userForRegistration.Username" />
            <ValidationMessage For="@(() => __userForRegistration.Username)" />
        </div>
    </div>
    <div class="form-group row">
        <label for="password" class="col-md-2 col-form-label">Password:</label>
        <div class="col-md-10">
            <InputText type="password" id="password" class="form-control" @bind-Value="__userForRegistration.Password" />
            <ValidationMessage For="@(() => __userForRegistration.Password)" />
        </div>
    </div>
    <div class="form-group row">
        <label for="confirm" class="col-md-2 col-form-label">Confirm Password:</label>
        <div class="col-md-10">
            <InputText type="password" id="confirm" class="form-control" @bind-Value="__userForRegistration.ConfirmPassword" />
            <ValidationMessage For="@(() => __userForRegistration.ConfirmPassword)" />
        </div>
    </div>
    <div class="form-group row">
        <label for="type" class="col-md-2 col-form-label">Task Type:</label>
        <div class="col-md-10">
            <InputRadioGroup id="type" @bind-Value="__userForRegistration.type" class="form-control">
                <InputRadio Value="0" /><span style="padding-left: 5px"></span>Technical <br />
                <InputRadio Value="1" /><span style="padding-left: 5px"></span>Business <br />
            </InputRadioGroup>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12 text-right">
            <button type="submit" class="btn btn-success">Register</button>
        </div>
    </div>
</EditForm>
<style>
    body {
        background-color: gray;
    }
</style>