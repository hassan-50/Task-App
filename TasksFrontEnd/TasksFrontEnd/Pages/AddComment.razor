@page "/addcomment"
@page "/addcomment/{Id:int}"
<EditForm Model="_userComment" OnValidSubmit="AddCommente" class="card card-body bg-light mt-5">
    <DataAnnotationsValidator />
    <div class="form-group row">
        <label for="Title" class="col-md-2 col-form-label">Comment:</label>
        <div class="col-md-10">
            <InputText id="UserName" class="form-control" @bind-Value="_userComment.Comment" />
            <ValidationMessage For="@(() => _userComment.Comment)" />
        </div>
    </div>

    <div class="row">
        <div class="col-md-12 text-right">
            <button type="submit" class="btn btn-success">Add Comment</button>
        </div>
    </div>
</EditForm>
<SuccessNotification @ref="_notification" />
<style>
    body {
        background-color: gray;
    }
</style>